<Window x:Class="CatalystGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatalystGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <!--<local:BooleanToNotConverter x:Key="BooleanToNotConverter"/>-->
        <!--<local:MarginSetter x:Key="MarginSetter"/>-->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>
    <Grid x:Name="CameraGrid">

        <StackPanel Orientation="Vertical">
            <UniformGrid Rows="1">
                <!--This resource stuff makes all children type Button have this property-->
                <UniformGrid.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="5,0,5,0"/>
                    </Style>
                </UniformGrid.Resources>
                <Button Content="Live"/>
                <Button Content="Stop"/>
                <Button Content="Capture"/>
                <TextBox Width="100pt"/>
                <Button Content="Save"/>
            </UniformGrid>
            <!--Labels for control boxes-->
            <UniformGrid Rows="1" Margin="0,5,0,0">
                <TextBlock Text="Exposure (micros)" TextAlignment="Center"/>
                <TextBlock Text="Frame Rate (Hz)" TextAlignment="Center"/>
                <TextBlock Text="Frame Count" TextAlignment="Center"/>
            </UniformGrid>
            <!--Boxes with +/- buttons-->
            <UniformGrid Rows="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="-" Width="20"/>
                    <TextBox Width="70pt"/>
                    <Button Content="+" Width="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="-" Width="20"/>
                    <TextBox Width="70pt"/>
                    <Button Content="+" Width="20"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="-" Width="20"/>
                    <TextBox Width="70pt"/>
                    <Button Content="+" Width="20"/>
                </StackPanel>
            </UniformGrid>
            <Image Name ="imageBox" Source="{Binding UIimage}"/>
        </StackPanel>
        
    </Grid>
</Window>
